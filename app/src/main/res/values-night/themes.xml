<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SheduleForICTIS" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/colorMain</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorGray30</item>
        <item name="colorControlNormal">@color/colorGray30</item>
        <item name="colorControlHighlight">#50BABABA</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:navigationBarColor">@color/colorNavigationDark</item>
        <!-- Customize your theme here. -->

        <item name="colorGray90">@color/colorGray10</item>
        <item name="colorGray70">@color/colorGray40</item>
        <item name="colorGray30">@color/colorGray80</item>
        <item name="colorGray10">@color/colorGray90</item>

        <item name="colorGray80">@color/colorGray20</item>
        <item name="colorGray20">@color/colorGray80</item>

        <item name="colorWhite">@color/colorBlack</item>
        <item name="colorBlack">@color/colorWhite</item>

        <item name="colorMain">@color/colorGray10</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="textInputStyle">@style/Widget.SheduleForICTIS.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.SheduleForICTIS.Button</item>

    </style>

    <style name="Widget.SheduleForICTIS.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorGray10</item>
        <item name="android:textColorHint">?attr/colorGray90</item>
        <item name="endIconTint">?attr/colorGray90</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius1</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius1</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    
    <style name="Widget.SheduleForICTIS.Button" parent="Widget.Material3.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorGray10</item>
        <item name="cornerRadius">@dimen/cornerRadius1</item>
        <item name="backgroundTint">?attr/colorGray90</item>
        <item name="rippleColor">?attr/colorGray20</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/fragment_notes_list_back</item>
    </style>

    <style name="SplashTheme" parent="Theme.SheduleForICTIS">
        <item name="android:windowBackground">@drawable/splash_back</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

</resources>