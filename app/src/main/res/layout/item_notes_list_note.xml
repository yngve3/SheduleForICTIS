<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginVertical="4dp"
    android:background="@drawable/item_notes_list_note_back"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTextNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текст заметки"
        android:textColor="?attr/colorGray90"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDateOfNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Пятница, 11 ноября"
        android:textColor="?attr/colorGray70"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tvNoteNameOfCouple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Иностранный язык для деловой коммуникацииka"
        android:textColor="?attr/colorGray70"
        android:textSize="11sp" />

</LinearLayout>
